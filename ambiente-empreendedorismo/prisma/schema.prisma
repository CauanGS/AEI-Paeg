generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  nome_usuario String   @id
  nome          String
  email         String   @unique
  senha         String
  criado_em     DateTime @default(now())

  @@map("usuarios")
}

model News {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text    // Descrição curta (para o card)
  content     String   @db.LongText // Conteúdo completo (para a página da notícia)
  image_path  String?  // O '?' torna o campo opcional
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("news") // Mapeia para a tabela "news" no banco
}

// Modelo de Eventos
model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  content     String   @db.LongText
  date        DateTime // Data do evento
  location    String   // Local do evento
  image_path  String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("events")
}

// Modelo de Programas
model Program {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  content     String   @db.LongText
  image_path  String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("programs")
}

// Modelo de Projetos
model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  content     String   @db.LongText
  image_path  String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt
  tags        String?

  @@map("projects")
}

// Modelo de Empreendimentos
model Venture {
  id          Int      @id @default(autoincrement())
  title       String
  description String   @db.Text
  content     String   @db.LongText
  image_path  String?
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("ventures")
}